<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inducesmile.kakirafarmapp">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:name="com.inducesmile.kakirafarmapp.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.inducesmile.kakirafarmapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.inducesmile.kakirafarmapp.LoginActivity" />
        <activity android:name="com.inducesmile.kakirafarmapp.SignUpActivity" />
        <activity android:name="com.inducesmile.kakirafarmapp.UserProfileActivity" />
        <activity
            android:name="com.inducesmile.kakirafarmapp.SettingsMenu"
            android:label="@string/title_activity_settings_menu"></activity>
    </application>

</manifest>